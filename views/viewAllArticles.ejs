<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles</title>
    <link rel="stylesheet" href="viewAllArticles.css">
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <div class="header"><span class="log">A<span>H</span>CA</span></div>
        <div class="body">
            <div class="left">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li>Popular</li>
                    <li>Most Liked</li>
                    <li>Best Discussions</li>
                    <li>Customise</li>
                    <li onclick="logout()">LOGOUT</li>
                </ul>
            </div>
            <div class="right">
                <input type="search" placeholder="Search a Blog..." class="search-inpt">
                <h3 class="feed">My Feed</h3>
              
                <div class="blogs">
                    <%data.forEach(blog=>{ %>
                    <div class="blog" onclick="singleBlog('<%=blog._id%>')">
                        <a><img src="<%=blog.Picture%>" alt=""></a>
                        <div class="blog-cont">
                            <p><%=blog.Content.substring(0,150)%></p>
                        </div>
                        <div class="blog-icons">
                            <span><i class="fa fa-heart-o" aria-hidden="true"></i></span>
                            <span><i class="fa fa-comment-o" aria-hidden="true"></i></span>
                        </div>
                    </div>
                    <%})%>
                  </div>

                  
                 </div>
                </div>
            </div>
        </div>
    </div>
    <!-- <div class="footer">
        <p>&copy; acele happy, all right reserved.</p>
</div> -->

<script>
    const urlParams = new URLSearchParams(window.location.search)
    const myParam = urlParams.get('token')
    if(myParam.split(' ')[0]==='Bearer'){
        localStorage.setItem('token',myParam)
    }

    
    let token = localStorage.getItem('token')
        if(!token){
            location.href = '/loginAsUser'
        }
    
    function singleBlog(id){
        location.href = '/getArticleById/'+id
    }

    function logout(){
        localStorage.removeItem('token')
        location.href = '/loginAsUser'
    }
</script>

</body>
</html>