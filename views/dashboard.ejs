<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome!</title>
    <link rel="stylesheet" href="dashboard.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- <link rel="stylesheet" href="index.css" /> -->
  </head>
  <body>
    <div class="container">
        <div class="hamburger">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
        <div class="left">
            <div class="profile">
                <img src="./pictures/pic.jpg" alt="">
                <figcaption>Acele Happy</figcaption>
            </div>
            <div class="side-container">
                <div class="side-icons">
                 <span><i class="fa fa-home" aria-hidden="true"></i></span>
                 <span><i class="fa fa-plus" aria-hidden="true"></i></span>
                 <span><i class="fa fa-moon-o" aria-hidden="true"></i></span>
                 <span><i class="fa fa-sign-out" aria-hidden="true"></i></span>
                </div>
             <div class="side-links">
                 <span><a href="/dashboard">Home</a></span>
                 <span><a href="/newBlog">New Blog</a></span>
                 <span>Dark</span>
                 <span><a href="/loginAsAdmin">Logout</a></span>
             </div>
            </div>
        </div>
        <div class="right">
            
            <div id="blogs" class="blogs">
                <%data.forEach(blog=>{ %>
                       <div class="blog">
                           <img src="<%=blog.Picture%>" alt="">
                           <div class="blog-cont">
                               <p><%=blog.Content%></p>
                           </div>
                           <div class="blog-icons">
                               <span><i class="fa fa-pencil" aria-hidden="true"></i></span>
                               <span onclick="deleteArticle('<%=blog._id%>')"><i class="fa fa-trash" aria-hidden="true"></i></span>
                           </div>
                       </div>
                       <%})%>
        </div>
    </div>
    
    <script>
        const hamburger= document.querySelector('.hamburger')
        const left = document.querySelector('.left')
        const right = document.querySelector('.right')
        hamburger.addEventListener('click',mobileMenu)
    function mobileMenu(){
       hamburger.classList.toggle('active')
       left.classList.toggle('active')
       right.classList.toggle('active')
   }

   function deleteArticle(id){
       fetch("https://atpl-my-brand.herokuapp.com/deleteArticle/"+id, {method: 'DELETE'}).then(res=>console.log(res))
       .catch(er=>console.log("Error "+er))
   }
    </script>
  </body>
</html>
