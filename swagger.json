                ],
                "summary": "Register a new article",
                "description": "Register a new article",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters":[
                    {
                        "in":"header",
                        "name":"Authorization",
                        "description":"JWT Token of the user",
                        "type":"string",
                        "required":"true"
                    },
                    {
                        "in":"formData",
                        "name":"Picture",
                        "description":"Picture of The article",
                        "type":"string",
                        "required":"true"
                    },
                    {
                        "in":"formData",
                        "name":"Title",
                        "description":"title for the article",
                        "type":"string",
                        "required":"true"
                    },
                    {
                        "in":"formData",
                        "name":"Content",
                        "description":"The whole content of the article(not less than 200 words)",
                        "type":"string",
                        "required":"true"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Invalid data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
