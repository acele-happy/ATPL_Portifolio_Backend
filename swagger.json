    "paths":{
        "/create Article": {
            "post": {
                "tags": [
                    "ARTICLE OPERATIONS"
                ],
                "summary": "Register a new article",
                "description": "Register a new article",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters":[
                    {
                        "in":"header",
                        "name":"Authorization",
                        "description":"JWT Token of the user",
                        "type":"string",
                        "required":"true"
                    },
                    {
                        "in":"formData",
                        "name":"Picture",
                        "description":"name of the property(eg, MakuzaPeacePlaza)",
                        "type":"string",
                        "required":"true"
                    },
                    {
                        "in":"formData",
                        "name":"Title",
                        "description":"latitude of the property",
                        "type":"string",
                        "required":"true"
                    },
                    {
                        "in":"formData",
                        "name":"Content",
                        "description":"longitude of the property",
                        "type":"string",
                        "required":"true"
                    },
                    {
                        "in":"formData",
                        "name":"Comments",
                        "description":"comments of the property",
                        "type":"string",
                        "required":"true"
                    },
                    {
                        "in":"formData",
                        "name":"Likes",
                        "description":"likes of the property",
                        "type":"array",
                        "items":{
                            "type":"file"
                        },
                        "required":"true"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Invalid data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/getAllArticles":{
            "get" : {
                "tags": [
                    "ARTICLE OPERATIONS"
                ],
                "summary":"get all articles",
                "produces":["application/json"],
                "responses": {
