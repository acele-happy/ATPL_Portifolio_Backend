{
    "swagger":"2.0",
    "info":{
        "version": "1.1.0",
        "title":"My Portifolio APis",
        "description":"ATPL My Brand Portifolio APIs"
    },
    "host":"localhost:4040",
    "basePath":"/",
    "schemes":[
        "https",
        "http"
    ],
    "securityDefinitions": {
        "Authorization": {
          "type": "apiKey",
          "name": "Authorization",
          "description": "Value: Bearer ",
          "in": "header",
          "scheme": "bearer"
        }
      },
      "consumes": [
        "application/json"
      ],
      "produces": [
        "application/json"
      ],
      
      "paths":{
          "/signup":{
              "post":{
                  "tags":[
                      "User"
                  ],
                  "description":"",
                  "parameters":[
                      {
                          "name":"obj",
                          "in":"body",
                          "required": true,
                          "schema":{
                              "$ref":"#/definitions/User"
                          }
                      }
                  ],
                  "responses":{
                      "201":{
                          "description":"Account created successfully"
                      },
                      "409":{
                          "description":"User already exist"
                      },
                      "422":{
                          "description":"Unprocessable Entity"
                      }
                  }
              }
          },
          "/loginAsAdmin":{
              "post":{
                  "tags":["User"],
                  "description":"",
                  "parameters":[{
                      "name":"obj",
                      "in":"body",
                      "required": true,
                      "schema":{
                          "$ref":"#/definitions/User"
                      }
                  }],
                  "responses":{
                      "200":{
                          "description":"Logged in successfully"
                      }
                  }
              }
          },

          "/loginAsUser":{
              "post":{
                  "tags":["User"],
                  "description":"",
                  "parameters":[{
                      "name":"obj",
                      "in":"body",
                      "required":true,
                      "schema":{"$ref":"#/definitions/User"}
                  }
                ],
                "responses":{
                    "description":"Logged in successfully"
                }
              }
          }
      },

      "/getUserById/:id":{
          "get":{
              "tags":[
                "User"
              ],
              "description":"",
              "parameters":[{
                  "name":"id",
                  "in":"path",
                  "type":"string",
                  "required":true
              }],
              "responses":{
                  "200":{
                      "description":"OK"            }
                      ,
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
              },

              "security":[
                  {
                      "Authorization":[]
                  }
              ]
          }
      }
}